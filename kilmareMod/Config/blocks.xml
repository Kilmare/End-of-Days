				<property name="Place" value="TowardsPlacer90" />
				<property name="RotationAllowed" value="pivotOnFloor" />
				<property name="PlaceEverywhere" value="true" />
				<!-- You can turn this on if using alpha 15 -->
				<!-- <property name="IndexName" value="TraderOnOff" /> -->
			</block>

			<block id="" name="StoneOven">
				<property name="Class" value="Campfire" />
				<property name="Material" value="Mbrick" />
				<property name="Shape" value="ModelEntity" />
				<property name="Model" value="#StoneOven?StoneOvenPrefab" />
				<property name="Place" value="TowardsPlacerInverted" />
				<property name="MultiBlockDim" value="1,3,1" />
				<property name="ParticleName" value="forge" />
				<property name="ParticleOffset" value="0.5,0,0.2" />
				<property name="ModelOffset" value="0,-0.025,0" />
				<property name="HeatMapStrength" value="1" />
				<property name="HeatMapTime" value="1000" />
				<property name="HeatMapFrequency" value="20" />
				<property name="BuffsWhenWalkedOn" value="burningSmall" />
				<property name="ActiveRadiusEffects" value="+heatSource(3)" />
				<property name="OpenSound" value="open_campfire" />
				<property name="CloseSound" value="" />
				<property class="RepairItems">
					<property name="rockSmall" value="500" />
					<property name="clayLump" value="100" />
				</property>
				<property name="DescriptionKey" value="StoneOvenDesc" />
				<drop event="Destroy" count="0" />
				<property name="Group" value="Building" />
				<property class="Workstation">
					<property name="Modules" value="tools,output,fuel,input" />
					<property name="Collide" value="melee,bullet,rocket" />
					<property name="CraftingAreaRecipes" value="campfire" />
				</property>
			</block>

			</append>

			<remove xpath="/blocks/block[@name='forge']" />

			<append xpath="/blocks">

			<block id="556" name="forge">
				<property name="Class" value="Forge" />
				<property name="Material" value="Mstone_scrap" />
				<property name="MaxDamage" value="800" />
				<property name="StabilitySupport" value="true" />
				<property name="Shape" value="ModelEntity" />
				<property name="Model" value="Entities/Crafting/forgePrefab" />
				<property name="Place" value="TowardsPlacerInverted" />
				<property name="OnlySimpleRotations" value="true" />
				<property name="IsTerrainDecoration" value="true" />
				<property name="ParticleName" value="forge" />
				<property name="ParticleOffset" value="0.5,0,0.5" />
				<property name="ImposterDontBlock" value="true" />
				<property name="Stacknumber" value="10" />
				<property name="HeatMapStrength" value="1.5" />
				<property name="HeatMapTime" value="1200" />
				<property name="HeatMapFrequency" value="25" />
				<!-- <property name="BuffsWhenWalkedOn" value="burningSmall"/> dont think the forge class supports this -->
				<property name="ActiveRadiusEffects" value="+heatSource(3)" />
				<property class="Workstation">
					<property name="CraftingAreaRecipes" value="forge" />
					<property name="Modules" value="tools,output,fuel,material_input" />
					<property name="InputMaterials" value="iron,brass,lead,glass,stone,clay" />
				</property>
				<property class="RepairItems">
					<property name="rockSmall" value="50" />
					<property name="clayLump" value="50" />
					<property name="leather" value="20" />
				</property>
				<drop event="Harvest" name="rockSmall" count="30" tool_category="harvestingTools" />
				<drop event="Harvest" name="rockSmall" count="20" tool_category="Disassemble" />
				<drop event="Harvest" name="clayLump" count="20" tool_category="Disassemble" />
				<drop event="Harvest" name="leather" count="5" tool_category="Disassemble" />
				<drop event="Destroy" count="0" />
				<drop event="Fall" name="destroyedStone" count="1" prob="0.75" stick_chance="1" />
				<property name="TakeDelay" value="15" />
				<property name="Group" value="Basics,Building" />
				<property name="DescriptionKey" value="forgeDesc" />
				<property name="EconomicValue" value="214" />
