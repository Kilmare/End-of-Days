				<property name="MaxDamage" value="1200" />
				<property name="Model" value="#RollupDoor?RollupDoorPrefab" />
				<property name="DescriptionKey" value="Roller_DoorDesc" />
				<property name="Shape" value="ModelEntity" />
				<property name="Tag" value="Door" />
				<property name="ModelOffset" value="0,-0.025,0" />
				<property name="MultiBlockDim" value="1,4,5" />
				<property name="OpenSound" value="" />
				<property name="CloseSound" value="" />
